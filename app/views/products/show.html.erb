<h2><%= @product.name %></h2>
<div>
	<%= link_to 'Back to Products', products_path(@product) %>
</div>
<%= render 'single_product', a_product: @product %>


<div>
	<%= link_to 'Edit', edit_product_path %>
	<%= link_to 'Delete product', product_path(@product), method: :delete, data: {confirm: "are you sure you want to delete this '#{@product.name}'?"} %>
</div>

<%= render partial: '/reviews/review_form', locals: {a_review: @review, id: @product.id } %>

<h2> Reviews for <%= @product.name %></h2>
	<ul>
<% @product_reviews.each do |a_review| %>
		<li>
			<%= a_review.review %>
			<%= a_review.customer.name %>
			<%= a_review.created_at %>
			<%= link_to 'Edit', edit_product_review_path(@product, a_review) %>
			<%= link_to 'Delete', product_review_path(@product, a_review), method: :delete, data: {confirm: "are you sure you want to delete this comment by '#{a_review.customer.name}'?"} %> 
		</li>
<% end %>
	</ul>
